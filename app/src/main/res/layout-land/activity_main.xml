<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp"
            android:text="@string/home_team"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp"
            android:text="@string/away_team"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp">
        <Button
            android:id="@+id/away_three_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/team_b_score"
            android:layout_above="@id/away_two_button"
            android:text="@string/points_3"
            android:padding="18dp"
            android:onClick="addThreeForTeamB"/>
        <Button
            android:id="@+id/away_two_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/team_b_score"
            android:layout_centerVertical="true"
            android:text="@string/points_2"
            android:padding="18dp"
            android:onClick="addTwoForTeamB"/>
        <Button
            android:id="@+id/away_one_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/team_b_score"
            android:layout_below="@id/away_two_button"
            android:text="@string/points_1"
            android:padding="18dp"
            android:onClick="addTwoForTeamB"/>
        <View
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/team_a_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="75sp"
            android:layout_margin="20sp"
            android:textColor="@android:color/black"
            android:layout_toLeftOf="@id/line"
            android:layout_centerVertical="true"
            android:text="0"/>
        <TextView
            android:id="@+id/team_b_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="75sp"
            android:layout_margin="20dp"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@id/line"
            android:layout_centerInParent="true"
            android:text="0"/>
        <Button
            android:id="@+id/home_three_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/team_a_score"
            android:layout_above="@id/home_two_button"
            android:text="@string/points_3"
            android:padding="18dp"
            android:onClick="addThreeForTeamA"/>
        <Button
            android:id="@+id/home_two_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/team_a_score"
            android:layout_centerVertical="true"
            android:text="@string/points_2"
            android:padding="18dp"
            android:onClick="addTwoForTeamA"/>
        <Button
            android:id="@+id/home_one_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/team_a_score"
            android:layout_below="@id/home_two_button"
            android:text="@string/points_1"
            android:padding="18dp"
            android:onClick="addOneForTeamA"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset"
            android:padding="18dp"
            android:onClick="reset"/>
    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>
